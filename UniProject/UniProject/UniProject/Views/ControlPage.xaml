<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniProject.ControlPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                 Margin="20">
            <Button x:Name="SelectBluetoothButton" 
                    Text="Select Bluetooth Device"
                    Clicked="SelectBluetoothButton_Clicked"
                    Style="{StaticResource normalButton}" />

            <Switch x:Name="LockUnlock"
                    HorizontalOptions="Center"
                    Toggled="LockUnlock_Toggled"/>
            <Label HorizontalOptions="Center" 
                Text="Lock / Unlock Door" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>